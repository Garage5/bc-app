<div id="signup_wrap">
  <div class="hd">
		<h1>Forgot your password?</h1>
	</div><!-- / hd -->
  <div class="section">
    <% form_for resource_name, resource, :url => password_path(resource_name) do |f| %>
    <%- if flash[:alert] -%>
      <div class="error_wrapper"><%= f.error_messages %></div>
    <%- end -%>
    <p><%= f.label :email %><%= f.text_field :email %></p>
    </div><!-- / section -->
		<div id="signup_finish">
		  <div class="clear">
		    <p class="reset_or_signin"><%= f.submit "Send me reset password instructions", :class => "reset_button" %></p>
        <div class="reset_or_signin"><em>or</em> <%= render :partial => "shared/devise_links" %></div>
      </div><!-- / clear -->
  	</div><!-- /signup_finish -->
  		<% end -%>
  </div><!-- / wrapper -->