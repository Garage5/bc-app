<div id="join_confirm" class="modal">
		<div class="modal_hd">
			<a onclick="closeModal('#join_confirm'); return false;" class="modal_close" href=""><img src="/images/icon_close.gif" /></a>
			<h1>Confirm</h1>
		</div><!-- / modal_hd -->
	<div class="modal_inner">
			<p style="white-space: nowrap;">Are you sure you want to join this tournament?</p>
			<div class="btn_wrapper clear">
		<div style="margin: 0 5px 0 0; display: block; float: left;"><%= link_to '<span class="icon"></span><span>Yes</span>', tournament_participants_path(@tournament), :method => :post, :class => 'btn' %></div>
		<a onclick="closeModal('#join_confirm'); return false;" href="" class="btn"><span class="icon"></span><span>No</span></a>
			</div>
	</div><!-- / modal_inner -->
</div><!-- / modal -->

<!-- / join_confirm -->

<% if current_user && @tournament && current_user.is_participant_of?(@tournament) %>
  <div id="create_team" class="modal">
		  <div class="modal_hd">
			  <a class="modal_close" href=""><img src="/images/icon_close.gif" /></a>
			  <h1>Create Team</h1>
		  </div><!-- / modal_hd -->
	  <div class="modal_inner">
			  <% form_for [@tournament, Team.new] do |f| -%>
			    <%= f.label :name, "Team Name" %>
			    <%= f.text_field :name %>
			    <div class="btn_wrapper clear">
					  <button class="btn add"><span class="icon"></span><span>Create Team</span></button>
					  or <a href="" onclick="closeModal('#create_team'); return false;">Cancel</a>
				  </div>
			  <% end -%>
	  </div><!-- / modal_inner -->
  </div><!-- / modal -->
<% end %>

<!-- / create_team -->


<div id="add_cohost" class="modal clear">
		<div class="modal_hd">
			<a class="modal_close" href=""><img src="/images/icon_close.gif" /></a>
			<h1>Add a Co-Host</h1>
		</div><!-- / modal_hd -->
	<div class="modal_inner">
			<p style="white-space: nowrap;">Enter an email or BattleID to add a Co-Host to this tournament.</p>
			<% form_tag add_cohost_tournament_participants_path(@tournament) , :method => :post do %>
				<div style="margin: 0 0 0 0;"><label for="team_name">Enter E-Mail or BattleID</label><input size="30" type="text" name="user" /></div>
					<button class="btn add"><span class="icon"></span><span>Add Co-Host</span></button>
					or <a class="modal_close" href="">Cancel</a>
			<% end %>
			
	</div><!-- / modal_inner -->
</div><!-- / modal -->

<!-- / add_cohosts -->


<div id="deny_participation" class="modal">
		<div class="modal_hd">
			<a class="modal_close" href=""><img src="/images/icon_close.gif" /></a>
			<h1>Deny Participation</h1>
		</div><!-- / modal_hd -->
	<div class="modal_inner">
			<p>Are you sure you want to deny participation?</p>
