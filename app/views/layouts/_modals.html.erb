<% if false # if current_user && @tournament && current_user.is_participant_of?(@tournament) %>
  <div id="create_team" class="modal">
		  <div class="modal_hd">
			  <a class="modal_close" href=""><img src="/images/icon_close.gif" /></a>
			  <h1>Create Team</h1>
		  </div><!-- / modal_hd -->
	  <div class="modal_inner">
			  <% form_for [@tournament, Team.new] do |f| -%>
			    <%= f.label :name, "Team Name" %>
			    <%= f.text_field :name %>
			    <div class="btn_wrapper clear">
					  <button class="modal_btn add">Create Team</button>
					  or <a href="" class="modal_close">Cancel</a>
				  </div>
			  <% end -%>
	  </div><!-- / modal_inner -->
  </div><!-- / modal -->
<% end %>

<!-- / create_team -->


<div id="add_cohost" class="modal clear">
		<div class="modal_hd">
			<a class="modal_close" href=""><img src="/images/icon_close.gif" /></a>
			<h1>Add a Co-Host</h1>
		</div><!-- / modal_hd -->
	<div class="modal_inner">
			<p style="white-space: nowrap;">Enter a BattleID to add a Co-Host to this tournament.</p>
			<% form_tag add_cohost_tournament_participants_path(@tournament) , :method => :post do %>
				<label for="team_name">Enter a BattleID</label><input size="30" type="text" name="user" />
				<div class="btn_wrapper clear">
					<button class="modal_btn">Add Co-Host</button>
					<a href="#" class="modal_btn btn_cancel modal_close">No</a>
				</div>
			<% end %>
			
	</div><!-- / modal_inner -->
</div><!-- / modal -->

<!-- / add_cohosts -->


