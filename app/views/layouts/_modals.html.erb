<div id="join_confirm" class="modal">
		<div class="modal_hd">
			<a onclick="closeModal('#join_confirm'); return false;" class="modal_close" href=""><img src="/images/icon_close.gif" /></a>
			<h1>Confirm</h1>
		</div><!-- / modal_hd -->
	<div class="modal_inner">
			<p style="white-space: nowrap;">Are you sure you want to join this tournament?</p>
			<div class="btn_wrapper clear">
		<div style="margin: 0 5px 0 0; display: block; float: left;"><%= link_to 'Yes', tournament_participants_path(@tournament), :method => :post, :class => 'modal_btn' %></div>
		<a href="" class="modal_btn btn_cancel modal_close">No</a>
			</div>
	</div><!-- / modal_inner -->
</div><!-- / modal -->

