<div class="pod tinfo">
	<div class="hd">
		<h2>Tournament Info</h2>
	</div><!-- / hd -->
	<div class="bd">
		<ul id="basic_info">
			<li class="clear"><strong>Game:</strong> <%= @tournament.game %></li>
			<li><strong>Tournament Type:</strong> Single Elimination</li>
			<li><strong>Total Slots:</strong> <%= @tournament.slot_count %></li>
			<li><strong>Slots Open:</strong> <%= @tournament.slot_count - @tournament.active_participants.count %></li>
			<li><strong>Registration Start:</strong> <%= @tournament.registration_start_date.strftime('%B %d, %Y') %></li>
			<li><strong>Registration End:</strong> <%= @tournament.registration_end_date.strftime('%B %d, %Y') %></li>
			<li class="last"><strong>Entry Fee:</strong> <%= @tournament.entry_fee == 0 ? 'N/A' : @tournament.entry_fee %></li>
		</ul>
		<h3>Prizes</h3>
		<ul id="prizes">
			<li>1st Place: <%= @tournament.first_prize %></li>
			<li>2nd Place: <%= @tournament.second_prize %></li>
			<li class="last">3rd Place:  <%= @tournament.third_prize %></li>
		</ul>
	</div><!-- / bd -->
</div><!-- / pod -->
