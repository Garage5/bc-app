<div class="pod tnav">
	<div class="hd">
		<h2>Your Tournaments</h2>
	</div><!-- / hd -->
	<div class="bd">
		<ul>
		  <% if !@instance.tournaments.blank? %>
		    <% for tournament in @instance.tournaments %>
		      <li><a href="/preview/tournament/overview/"><%= tournament.name %></a></li>
		    <% end %>
		  <% end %>
			<li class="last"><%= link_to "Create a New Tournament", new_tournament_path, :class => 'icon-add' %></li>
		</ul>
	</div><!-- / bd -->
</div><!-- / pod -->