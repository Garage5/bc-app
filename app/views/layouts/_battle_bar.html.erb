<div id="battle_bar" class="clear">
	<div id="bar_content">
		<% if current_user %> <%# if logged in %>
		<div id="user_avatar">
		  <ul>
			  <li>
			    <a id="avatar" href="<%= profile_user_path(current_user.login) %>"><%= image_tag current_user.avatar.url(:small) %>
			    <span><%= current_user.try(:login) || 'nologin' %></span></a>
			  </li>
			</ul>
		</div><!-- / user_avatar -->
		
		<div class="beta" id="your_tournaments">
			<a class="clear" href=""><span id="tmenu_txt">Your Tournaments</span> <span id="tmenu_unread">16</span></a>
			<div id="tmenu">
				<div id="tmenu_inner">
					<div class="beta" id="matches_today">
					<h3>Upcoming Matches</h3>
					<ul>
						<li><a href="/preview/tournaments/overview/">Valor Tournament <em>You vs James <strong>@ 4:15PM CST</strong></em></a></li>
						<li><a href="/preview/tournaments/overview/">Valor Tournament <em>You vs James <strong>@ 4:15PM CST</strong></em></a></li>
						<li><a href="/preview/tournamenst/overview/">Valor Tournament <em>You vs James <strong>@ 4:15PM CST</strong></em></a></li>
					</ul>
					</div><!-- / matches_today -->
					<h3>Your Tournaments</h3>
					<ul>
						<li><a href="" class=" tedit">Edit</a><a href="/tournaments/1/">Valor <em>Hosted by Starfeeder</em></a></li>
						<li><a href="" class=" tedit">Edit</a><a href="/tournaments/1/">Random SC2 <em>Hosted by Starfeeder</em></a></li>
						<li><a href="" class=" tedit">Edit</a><a href="/tournaments/1/">nvidia CSS League <em>Hosted by CSSCommunity.com</em></a></li>
						<li><a href="" class=" tedit">Edit</a><a href="/tournaments/1/">Team Fortress 2 Tournament <em>Hosted by myTF2.com</em></a></li>
					</ul>
					
				</div>
			</div>
		</div><!-- / your_tournaments -->
		
		<div class="beta" id="your_matches">
			<p><a href="/preview/matches/show/">You vs James at 4:53PM</a></p>
		</div><!-- / your_matches -->
		
		
		<div id="acct_nav" class="clear">
  		<ul class="clear">
  		  <% if current_account.admin == current_user %>
  			  <li id="billing"><%= link_to "Account", billing_account_path %></li>
  			  <li id="settings"><%= link_to "Settings", settings_path %></li>
        	<% end %>
  			  <li id="feedback"><a class="feedback" title="" href="">Feedback</a></li>
    			<% if current_user %>
    			<li id="user_logout"><%= link_to "Logout", destroy_user_session_url %></li>
  				<% end %>
  		</ul>
  	</div>
		
		<div id="user_nav">
			<ul>
				
			</ul>
		</div>
		<% else %> <%# if not %>
		<div id="logged_out">
		<div id="user_nav">
		  <ul>
		    <li id="user_login">
		      <% form_for 'user', User.new, :url => new_user_session_url, :html => {:class => 'login_form'} do |f| -%>
		        <%= f.label :username, "BattleID:" %>
		        <%= f.text_field :username %>
		        <%= f.label :password, "Password:" %>
		        <%= f.password_field :password %>
		        <button class="btn" type="submit">Sign In</button>
		      <% end -%>
		    </li>
        <li id="user_signup"><p>Don't have a BattleID?</p><%= link_to "Sign Up", new_user_path %></li>
  			<li id="feedback"><a class="feedback" title="" href="">Feedback</a></li>
      </ul>
		</div><!-- / user_nav -->
		
		</div><!-- / logged_out -->
		<% end %>
  	</div><!-- / acct_nav -->
	</div><!-- / bar_content -->
</div><!-- / battle_bar -->
