<% stylesheet :messages %>
<% stylesheet :match %>
<% body 'match' %>
<% title "Fuck you, Fix this." %>

<% content_for :tournament_nav do -%>
  <%= render :partial => "layouts/sub_nav", :locals => {:active => 'brackets'} %>
<% end -%>

<% content_for :modals do %>
  <% if @slot %>
	<div id="match_submit_results" class="modal">
			<div class="modal_hd">
				<a class="modal_close" href=""><img src="/images/icon_close.gif" /></a>
				<h1>Confirm Results</h1>
			</div><!-- / modal_hd -->
		<div class="modal_inner clear">
    	<div class="group"><label>Are you sure about your results you dumbfuck?</label></div>
    	<div><button type="submit" class="btn"><span class="icon"></span><span>Yes</span></button>
        <button type="submit" class="btn"><span class="icon"></span><span>no</span></button></div>
		</div><!-- / modal_inner -->
	</div><!-- / modal -->
	<% end %>
<% end %>

<div id="maincol">
	<div class="col">
	<div class="pod">
	<div class="bd clear">
		<div class="clear" id="match_wrapper">
			
			<div id="home_player">
				<%= image_tag @match.players[0].avatar.url(:large) %>
				<strong><%= @match.players[0].login %></strong>
			</div>

			<div id="match_details">
				<h2>VS</h2>
				<h3>Round 1</h3>
				<h4>6/14/09 12:23PM</h4>
    		<ul id="match_results" class="clear">
    			<li class="selected"><%= link_to 'I Won', [:won, @tournament, @match, @slot], :id => "result_won", :method => :put %></li>
    			<li class="inactive"><%= link_to 'I Lost', [:lost, @tournament, @match, @slot], :id => "result_lost", :method => :put %></li>
    		</ul>
			</div>
      
			<div id="away_player">
				<%= image_tag @match.players[1].avatar.url(:large) %>
				<strong><%= @match.players[1].login %></strong>
			</div>
						
		</div><!-- / match_wrapper -->
	</div><!-- / bd -->
	</div><!-- / pod -->
	
	<div id="comment_mod">
	  <ul class="group">
			<% if !@match.comments.blank? %>
	      <%= render @match.comments %> <!-- renders partial in comments/_comment -->
	    <% end %>
	  </ul><!-- /comments ul -->
	
	  <div class="comment_form darkpod clear">
			<h4>Post a Comment</h4>
			<%= render :partial => 'comments/form', :locals => {:post_url => [@tournament, @match, Comment.new]} %>
		</div><!-- / darkpod -->
	</div><!-- / comment_mod -->
	</div><!-- / col -->
</div><!-- / main-col -->

<div id="sidecol">
	<div class="col">
		<div class="pod">
		<div class="hd">
	 	 <h2>Match Notes</h2>
		</div>
			<div class="bd clear">
				<p>Best of 3 on map: ctf_2fort</p>
			</div><!-- / bd -->
		</div><!-- / pod -->
		
	</div><!-- / col -->
</div><!-- / sidecol -->