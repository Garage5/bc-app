<% form_for post_url, :html => {:multipart => true} do |f| -%>

  <%= hidden_field_tag(:selected_file, nil, :id=>"selectedFile") %>

  <div style="margin-left: 55px;">
  <div><%= f.text_area :body, :rows => 5, :style => "width: 98%" %></div>
  <div id="message_attach" class="clear">
    <%= s3_swf_upload_tag(
        :width => 400, 
        :height => 30, 
        :success => "alert('File Uploaded Successfully: ' + filename);
                     document.getElementById('selectedFile').value=filename;
                     document.getElementById('theform').submit();",
        :failed => 'alert("File Upload Failed.");', 
        :selected => 'alert(filename + " selected - OK!");',
        :prefix => '',
        :upload => 'Upload File',
        :initial_message=> 'Attach a file (Each file should be under 100 MB)')
    %>

    <% if @selected_file %>
      <p>File Uploaded:
      <%= link_to("#{@selected_file}", "http://s3.amazonaws.com/#{S3SwfUpload::S3Config.bucket}/#{@selected_file}") %>
    <% end %>


<% if false %>
		<label class="textarea"><strong>Attach a file</strong> (each file should be under 100 MB)</label>
		  <% f.fields_for :attachments, Attachment.new do |attachment| -%>
        <%= attachment.file_field :attachment, :class => "file" %>
      <% end -%>
<% end %>


	</div><!-- / message_attach -->
	<div><button type="submit" class="btn"><span class="icon"></span><span>Post Comment</span></button></div>
</div>
<% end -%>
