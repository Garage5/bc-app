<li class="comment">
  <div class="comment_header">
   <%= image_tag comment.author.avatar.url(:medium) %>
   <h3><%= comment.author.login %> <span class="date" title="<%= comment.created_at.iso8601 %>"><%= comment.created_at %></span></h3>
  </div>
  <div class="comment_body">
    <p><%=simple_format comment.body %></p>
		<%= render :partial => 'attachments/list', :locals => {:attachments => comment.attachments} %>
  </div>
</li>