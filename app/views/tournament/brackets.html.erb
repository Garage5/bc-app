<% stylesheet :brackets %>
<div id="content-wrapper">
	<div id="user-nav" class="clear">
		
		<%= render :partial => "layouts/user_nav" %>
		
		<h1>Tournament Name</h1>
		
		<%= render :partial => "layouts/sub_nav" %>
		
	</div><!-- / user-nav -->
<div id="content" class="clear">
<div id="maincol" class="full_width">
	<div class="pod">
  	<div id="brackets" class="bd clear">
  	  <div id="bracket_window" class="clear">
  	    <% player_count = 16 %>
  	    <!-- ROUND 1 -->
        <ul class="round" id="r1">
          <li class="round_header"><h3>Round 1</h3></li>
          
          <% (player_count/2).times do %>
          <li class="match">
            <ul>
              <li class="player"><a href="#"><img class="bracket_avatar" src="/images/avatar_big.jpg" height="30"/> mattdetails</a></li>
              <li class="comments"><span><a href="#">
                <img src="/images/bracket_comment.gif"/> 2</a> | 
                <a href="#"><a href="#"><img src="/images/bracket_attachment.gif"/> 0
              </a></span></li>
              <li class="player disqualified"><a href="#"><img class="bracket_avatar" src="/images/avatar_big.jpg" height="30"/> mattdetails</a>
                <img class="disqualified" src="/images/bracket_x.gif">
              </li>
            </ul>
          </li>
          <% end %>
        </ul>
  	    <!-- END ROUND 1 -->

  	    <!-- ROUND 2 -->
        <ul class="round" id="r2">
          <li class="round_header"><h3>Round 2</h3></li>
          
          <% (player_count/4).times do %>
          <li class="match">
            <ul>
              <li class="player"><a href="#"><img class="bracket_avatar" src="/images/avatar_big.jpg" height="30"/> mattdetails</a></li>
              <li class="comments"><span><a href="#">
                <img src="/images/bracket_comment.gif"/> 2</a> | 
                <a href="#"><a href="#"><img src="/images/bracket_attachment.gif"/> 0
              </a></span></li>
              <li class="player"><a href="#"><img class="bracket_avatar" src="/images/avatar_big.jpg" height="30"/> mattdetails</a></li>
            </ul>
          </li>
          <% end %>
        </ul>
        <!-- END ROUND 2 -->
        
  	    <!-- ROUND 3 -->
        <ul class="round" id="r3">
          <li class="round_header"><h3>Round 3</h3></li>
          <% (player_count/8).times do %>
          <li class="match">
            <ul>
              <li class="player"><a href="#"><img class="bracket_avatar" src="/images/avatar_big.jpg" height="30"/> mattdetails</a></li>
              <li class="comments"><span><a href="#">
                <img src="/images/bracket_comment.gif"/> 2</a> | 
                <a href="#"><a href="#"><img src="/images/bracket_attachment.gif"/> 0
              </a></span></li>
              <li class="player"><a href="#"><img class="bracket_avatar" src="/images/avatar_big.jpg" height="30"/> mattdetails</a></li>
            </ul>
          </li>
          <% end %>
        </ul>
  	    <!-- END ROUND 3 -->

        <!-- ROUND 4 -->
        <ul class="round" id="r4">
          <li class="round_header"><h3>Round 4</h3></li>
          <% (player_count/16).times do %>
          <li class="match">
            <ul>
              <li class="player"><a href="#"><img class="bracket_avatar" src="/images/avatar_big.jpg" height="30"/> mattdetails</a></li>
              <li class="comments"><span><a href="#">
                <img src="/images/bracket_comment.gif"/> 2</a> | 
                <a href="#"><a href="#"><img src="/images/bracket_attachment.gif"/> 0
              </a></span></li>
              <li class="player"><a href="#"><img class="bracket_avatar" src="/images/avatar_big.jpg" height="30"/> mattdetails</a></li>
            </ul>
          </li>
          <% end %>
        </ul>
  	    <!-- END ROUND 4 -->
 
  	    <!-- ROUND 5 -->
        <ul class="round final" id="r5">
          <li class="round_header"><h3>Winner</h3></li>
          <li class="match">
            <ul>
              <li class="player"><a href="#"><img class="bracket_avatar" src="/images/avatar_big.jpg" height="30"/> mattdetails</a></li>
            </ul>
          </li>
        </ul>
  	    <!-- END ROUND 5 -->
   	  </div>
  	</div><!-- / bd -->
	</div><!-- / pod -->
	
</div><!-- / main-col -->
<!-- / sidecol -->